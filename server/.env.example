PORT=3001
NODE_ENV=production

# Redis (Required for production - use managed Redis like Railway, Upstash, or Redis Cloud)
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=15

# API Configuration
DEXSCREENER_BASE_URL=https://api.dexscreener.com
JUPITER_BASE_URL=https://lite-api.jup.ag

# Polling Configuration
# How often to fetch fresh data (in seconds)
# Lower = more real-time but more API calls
# DexScreener allows ~300 req/min, so 10s is safe
POLL_INTERVAL_SECONDS=10

# Price change threshold for alert broadcasts (0.01 = 1%)
# Meme coins are volatile, 1% change is common
PRICE_CHANGE_THRESHOLD=0.01

# Volume spike ratio for alert broadcasts (1.2 = 20% increase)
# Detects sudden trading activity
VOLUME_SPIKE_THRESHOLD=1.2

# CORS - Set to your frontend domain in production
CLIENT_ORIGIN=http://localhost:5173

# HTTP Client Settings (configured in code, documented here)
# Timeout: 15000ms (15 seconds)
# Retries: 3
# Retry delay: exponential backoff (1s, 2s, 4s)
